<Application x:Class="WpfApp3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp3"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/Styles/WhiteTheme.xaml"/>
                
                <ResourceDictionary Source="/Styles/AddButton.xaml"/>
                <ResourceDictionary Source="/Styles/DeleteButton.xaml"/>
                <ResourceDictionary Source="/Styles/StandartButton.xaml"/>
                <ResourceDictionary Source="/Styles/WindowStyle.xaml"/>
                <ResourceDictionary Source="/Styles/PageStyle.xaml"/>
                
               
            </ResourceDictionary.MergedDictionaries>
           
        </ResourceDictionary>
    </Application.Resources>
</Application>
