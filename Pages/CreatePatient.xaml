<Page x:Class="WpfApp3.Pages.CreatePatient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreatePatient">
    
    <Grid x:Name="AddPatient">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Label Content="Фамилия" Grid.Row="0" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="0" Style="{StaticResource Textbox2}" x:Name="tt">
            <Binding Path="LastName" Mode="TwoWay" >
                <Binding.ValidationRules>
                    <local:IsStringCorrect />
                </Binding.ValidationRules>
            </Binding>

        </TextBox>

        <Label Content="Имя" Grid.Row="1" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="1"  Style="{StaticResource Textbox2}" x:Name="tt1">
            <Binding Path="Name" Mode="TwoWay" >
                <Binding.ValidationRules>
                    <local:IsStringCorrect />
                </Binding.ValidationRules>
            </Binding>


        </TextBox>

        <Label Content="Отчество" Grid.Row="2"  Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="2" Style="{StaticResource Textbox2}" x:Name="tt2">

            <Binding Path="MiddleName" Mode="TwoWay" >
                <Binding.ValidationRules>
                    <local:IsStringCorrect />
                </Binding.ValidationRules>
            </Binding>

        </TextBox>

        <Label Content="Дата рождения" Grid.Row="3"  Style="{StaticResource Label2}"></Label>
        <DatePicker Grid.Row="3" Style="{StaticResource DatePicker2}" Text="{Binding Path=Birthday, Mode=TwoWay}"  >
           
        </DatePicker>

        <Label Content="Контактный телефон" Grid.Row="4"  Style="{StaticResource Label2}"></Label>

        <TextBox Grid.Row="4" Style="{StaticResource Textbox2}" x:Name="f1">
            <Binding Path="PhoneNumber" Mode="TwoWay" >
                <Binding.ValidationRules>
                    <local:IsNumberCorrect />
                </Binding.ValidationRules>
            </Binding>
            
        </TextBox>
        
        <ItemsControl  Grid.Row="4" Style="{StaticResource Validation}"
FontSize="12"
ItemsSource="{Binding ElementName=f1, Path=
(Validation.Errors)}">
            <ItemsControl.ItemTemplate >
                <DataTemplate>
                    <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Style="{StaticResource Validation1}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  Grid.Row="0" Style="{StaticResource Validation}"
FontSize="12"
ItemsSource="{Binding ElementName=tt, Path=
(Validation.Errors)}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Style="{StaticResource Validation1}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  Grid.Row="1" Style="{StaticResource Validation}"
FontSize="12"
ItemsSource="{Binding ElementName=tt1, Path=
(Validation.Errors)}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl  Grid.Row="2" Style="{StaticResource Validation}"
FontSize="12"
ItemsSource="{Binding ElementName=tt2, Path=
(Validation.Errors)}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        <Button Style="{StaticResource AddButtonStyle}"  Grid.Row="5" Click="AddPatient_Click"></Button>
        <Button Style="{StaticResource StandartButtonStyle}" Content="Назад" Grid.Row="6" Click="Button_Click"></Button>
    </Grid>
</Page>
