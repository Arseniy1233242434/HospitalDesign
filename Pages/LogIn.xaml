<Page x:Class="WpfApp3.Pages.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn">

    <DockPanel>
        <Grid x:Name="Authorisationn">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Идентификатор" Style="{StaticResource Label3}" Grid.Row="0"></Label>
            <TextBox Grid.Row="0" Style="{StaticResource Textbox3}" Text="{Binding Path=ID, Mode=OneWayToSource}"></TextBox>

            <Label Content="Пароль" Grid.Row="1"  Style="{StaticResource Label4}"></Label>
            <TextBox Grid.Row="1" Style="{StaticResource Textbox4}" Text="{Binding Path=Password, Mode=OneWayToSource}"></TextBox>
            <Button Style="{StaticResource Button1}" Content="Войти" Grid.Row="2"   Click="Authorisation_Click"></Button>
            <Button Style="{StaticResource Button1}" Content="Регистрация" Grid.Row="3"    Click="Registration_Click"></Button>
        </Grid>

    </DockPanel>
</Page>
