<Page x:Class="WpfApp3.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <local:DiscountConverter x:Key="g"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="34"></RowDefinition>
                <RowDefinition Height="33"></RowDefinition>
                <RowDefinition Height="33"></RowDefinition>

                <RowDefinition Height="38"></RowDefinition>
                <RowDefinition Height="38"></RowDefinition>
                <RowDefinition Height="38"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Фамилия:" Grid.Row="0"></Label>
            <Label Content="{Binding Path=Doctor1.LastName, Mode=OneWay}" Grid.Row="0" Style="{StaticResource Label5}"></Label>

            <Label Content="Имя:" Grid.Row="1"></Label>
            <Label Content="{Binding Path=Doctor1.Name, Mode=OneWay}" Grid.Row="1" Style="{StaticResource Label5}"></Label>

            <Label Content="Отчество:" Grid.Row="2"></Label>
            <Label Content="{Binding Path=Doctor1.MiddleName, Mode=OneWay}" Grid.Row="2" Style="{StaticResource Label5}"></Label>

            <Label Content="Специализация:" Grid.Row="3"></Label>
            <Label Content="{Binding Path=Doctor1.Specialization, Mode=OneWay}" Grid.Row="3" Style="{StaticResource Label5}"></Label>

            <Label Content="пациентов:" Grid.Row="4"></Label>
            <Label Content="{Binding Path= patientcount.ID, Mode=OneWay}" Grid.Row="4" Style="{StaticResource Label5}"></Label>

            <Label Content="Докторов:" Grid.Row="5"></Label>
            <Label Content="{Binding Path=patientcount.Password, Mode=OneWay}" Grid.Row="5" Style="{StaticResource Label5}"></Label>
        </Grid>
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60">
                    
                </RowDefinition>
                <RowDefinition>

                </RowDefinition>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource Button2}"  Click="Create_Patient"></Button>
            <Button Style="{StaticResource Button3}" Content="Начать прием" Click="Button_Click"></Button>
            <Button Style="{StaticResource Button4}" Content="Изменить информацию"  Click="SavePatient"></Button>
            <Button Style="{StaticResource Button5}"   Click="DeletePatient_click"></Button>
            <ListView
Grid.Row="1" 
ItemsSource="{Binding  Patientss}"  
                SelectedItem="{Binding SelectedUser}" Style="{StaticResource ListView}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Id: "/>
                                <TextBlock Text="{Binding Id}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Имя: "/>
                                <TextBlock Text="{Binding Name}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Фамилия: "/>
                                <TextBlock Text="{Binding LastName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Отчество: "/>
                                <TextBlock Text="{Binding MiddleName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Возраст: "/>
                                <TextBlock Text="{Binding Birthday}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Контактный телефон: "/>
                                <TextBlock Text="{Binding PhoneNumber,Converter={StaticResource g} ,StringFormat={}{0:# (###) ### ## ##}}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
