<Page x:Class="WpfApp3.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Фамилия" Grid.Row="0" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="0" Style="{StaticResource Textbox2}" Text="{Binding Path=LastName, Mode=OneWayToSource}"></TextBox>

        <Label Content="Имя" Grid.Row="1" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="1" Style="{StaticResource Textbox2}" Text="{Binding Path=Name, Mode=OneWayToSource}"></TextBox>

        <Label Content="Отчество" Grid.Row="2" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="2" Style="{StaticResource Textbox2}" Text="{Binding Path=MiddleName, Mode=OneWayToSource}"></TextBox>

        <Label Content="Специализация" Grid.Row="3" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="3" Style="{StaticResource Textbox2}" Text="{Binding Path=Specialization, Mode=OneWayToSource}"></TextBox>

        <Label Content="Пароль" Grid.Row="4" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="4" Style="{StaticResource Textbox2}" Text="{Binding Path=Password, Mode=OneWayToSource}"></TextBox>

        <Label Content="Подтверждение пароля" Grid.Row="5" Style="{StaticResource Label2}"></Label>
        <TextBox Grid.Row="5" Style="{StaticResource Textbox2}" Text="{Binding Path=SecondPassword, Mode=OneWayToSource}"></TextBox>
        <Button Style="{StaticResource StandartButtonStyle}" Content="Зарегистрироваться" Grid.Row="6" Click="Registration_Click"></Button>
    </Grid>
</Page>
