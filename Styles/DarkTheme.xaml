<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="StandartButtonBackground" Color="#191970"/>
    <SolidColorBrush x:Key="StandartButtonHover" Color="#0000CD"/>
    <SolidColorBrush x:Key="StandartButtonPressed" Color="#7B68EE"/>
    <SolidColorBrush x:Key="StandartButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="StandartButtonBorder" Color="LightBlue"/>

    <SolidColorBrush x:Key="AddButtonBackground" Color="Green"/>
    <SolidColorBrush x:Key="AddButtonHover" Color="#3CB371"/>
    <SolidColorBrush x:Key="AddButtonPressed" Color="#00FA9A"/>

    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#C50F1F"/>
    <SolidColorBrush x:Key="DeleteButtonHover" Color="#DC143C"/>
    <SolidColorBrush x:Key="DeleteButtonPressed" Color="#8B0000"/>


    <SolidColorBrush x:Key="WindowBackground" Color="Black"/>

</ResourceDictionary>