<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="StandartButtonBackground" Color="#4682B4"/>
    <SolidColorBrush x:Key="StandartButtonHover" Color="Blue"/>
    <SolidColorBrush x:Key="StandartButtonPressed" Color="#E0FFFF"/>
    <SolidColorBrush x:Key="StandartButtonForeground" Color="Black"/>
    <SolidColorBrush x:Key="StandartButtonBorder" Color="#005A9E"/>

    <SolidColorBrush x:Key="AddButtonBackground" Color="#6B8E23"/>
    <SolidColorBrush x:Key="AddButtonHover" Color="#3CB371"/>
    <SolidColorBrush x:Key="AddButtonPressed" Color="#228B22"/>

    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#FF8C00"/>
    <SolidColorBrush x:Key="DeleteButtonHover" Color="#FFA500"/>
    <SolidColorBrush x:Key="DeleteButtonPressed" Color="#FF6347"/>


    <SolidColorBrush x:Key="WindowBackground" Color="#E0FFFF"/>


</ResourceDictionary>