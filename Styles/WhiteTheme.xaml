<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="StandartButtonBackground" Color="#0078D4"/>
    <SolidColorBrush x:Key="StandartButtonHover" Color="#005A9E"/>
    <SolidColorBrush x:Key="StandartButtonPressed" Color="#004578"/>
    <SolidColorBrush x:Key="StandartButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="StandartButtonBorder" Color="#005A9E"/>

    <SolidColorBrush x:Key="AddButtonBackground" Color="#107C10"/>
    <SolidColorBrush x:Key="AddButtonHover" Color="#0A5A0A"/>
    <SolidColorBrush x:Key="AddButtonPressed" Color="#063706"/>

    <SolidColorBrush x:Key="DeleteButtonBackground" Color="#D13438"/>
    <SolidColorBrush x:Key="DeleteButtonHover" Color="#A42B2F"/>
    <SolidColorBrush x:Key="DeleteButtonPressed" Color="#7A2125"/>

    <!-- Цвет фона для окон -->
